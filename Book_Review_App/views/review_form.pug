extends layout

block content
  .container#update-review-container
    .row.justify-content-center
      .col-md-8
        h1#update-review-title.text-center Editing Review for #{book.title}

        // Form for submitting review update
        form#review-form(action=`/books/${book._id}/review/update`, method="POST")
          .form-group#rating-group
            label(for="rating") Rating (1-5):
            input.form-control(type="number", id="rating", name="rating", required=true, min="1", max="5", value=review.rating)
            if messages.ratingError
              .invalid-feedback#rating-error(style="display:block;")
                p= messages.ratingError

          .form-group#text-group
            label(for="text") Review Text:
            textarea.form-control(id="text", name="text", required=true, rows="5").form-control= review.text
            if messages.textError
              .invalid-feedback#text-error(style="display:block;")
                p= messages.textError

          .btn-toolbar#review-buttons
            button.btn.btn-primary(type="submit") Update Review
            a.btn.btn-secondary.ml-2(href=`/books/${book._id}`) Cancel
    script(src="/javascripts/reviewFormValidation.js")
