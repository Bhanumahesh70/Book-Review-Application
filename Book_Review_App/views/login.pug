extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        h1 Login
        if messages.error
          .alert.alert-danger
            each error in messages.error
              p= error
        form(action='/users/login', method='POST')
          .form-group
            label(for='username') Username
            input#username.form-control(type='text', name='username', required='required', placeholder='Enter your username')
          .form-group
            label(for='password') Password
            input#password.form-control(type='password', name='password', required='required', placeholder='Enter your password')
          button.btn.btn-primary(type='submit') Log In
